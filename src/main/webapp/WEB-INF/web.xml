<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <!--Filtro para recursos de colaboradores-->
  <filter>
    <filter-name>AuthenticationFilterColaborador</filter-name>
    <filter-class>com.robinlb.techbit.AuthenticationFilterColaborador</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationFilterColaborador</filter-name>
    <url-pattern>/Login.jsp</url-pattern>
    <url-pattern>/Dashboard.jsp</url-pattern>
    <url-pattern>/Empleados.jsp</url-pattern>
    <url-pattern>/IngresarEmpleados.jsp</url-pattern>
    <url-pattern>/UsuariosEmpleados.jsp</url-pattern>
    <url-pattern>/ActualizarEmpleado.jsp</url-pattern>
    <url-pattern>/ModificarUsuarioColaborador.jsp</url-pattern>
    <url-pattern>/UsuariosEmpleados.jsp</url-pattern>
    <url-pattern>/RestablecerPasswordUsuario.jsp</url-pattern>
    <url-pattern>/RegistrarUsuarioColaborador.jsp</url-pattern>
    <url-pattern>/AgregarUsuarioFinal.jsp</url-pattern>
    <url-pattern>/ClientesNaturales.jsp</url-pattern>
    <url-pattern>/ActualizarUsuarioFinal.jsp</url-pattern>
    <url-pattern>/CredencialesUsuariosFinales</url-pattern>
  </filter-mapping>
  
  <!--Filtro para recursos de clientes-->
  <filter>
    <filter-name>AuthenticationFilterCliente</filter-name>
    <filter-class>com.robinlb.techbit.AuthenticationFilterCliente</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationFilterCliente</filter-name>
    <url-pattern>/Login_Cliente.jsp</url-pattern>
    <url-pattern>/C-Dashboard.jsp</url-pattern>
    <url-pattern>/CrearTicket.jsp</url-pattern>
  </filter-mapping>
  
  <!-- Filtros de acceso a servelets dedicados a colaboradores -->
  <filter>
    <filter-name>AuthenticationFilterServeletsForColaboradores</filter-name>
    <filter-class>com.robinlb.techbit.AuthenticationFilterServeletsForColaboradores</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationFilterServeletsForColaboradores</filter-name>
    <url-pattern>/SvAsignarUsuarioColaborador</url-pattern>
    <url-pattern>/SvModificarUsuarioColaborador</url-pattern>
    <url-pattern>/SvRestablecerContrase√±a</url-pattern>
    <url-pattern>/SvGoToModificarUsuario</url-pattern>
    <url-pattern>/SvGoToOtorgarUsuarioColaborador</url-pattern>
    <url-pattern>/SvGoToRestablecerPassword</url-pattern>
    <url-pattern>/SvGoToUsuariosColaboradores</url-pattern>
    <url-pattern>/SvGoToModifyEmploy</url-pattern>
    <url-pattern>/SvGoToEmployesList</url-pattern>
    <url-pattern>/SvModificarEmpleado</url-pattern>
    <url-pattern>/SvIngresarEmpleado</url-pattern>
    <url-pattern>/SvBorrarEmpleado</url-pattern>
    <url-pattern>/SvGoToClientesNaturales</url-pattern>
    <url-pattern>/SvIngresarUsuarioFinal</url-pattern>
    <url-pattern>/SvGoToCredencialesUsuariosFinales</url-pattern>
  </filter-mapping>
</web-app>
